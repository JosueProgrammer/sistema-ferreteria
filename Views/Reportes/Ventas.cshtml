@model Sistema_Ferreteria.Models.ViewModels.VentasReporteVM
@{
    ViewData["Title"] = "Reporte de Ventas";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="h3 mb-0 text-gray-800">Reporte Detallado de Ventas</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ventas</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4 border-0 rounded-4">
        <div class="card-body">
            <form method="get" class="row align-items-end g-3">
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Fecha Inicio</label>
                    <input type="date" name="inicio" class="form-control" value="@Model.FechaInicio.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Fecha Fin</label>
                    <input type="date" name="fin" class="form-control" value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filtrar
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                            <li>
                                <a class="dropdown-item" asp-action="ExportarExcelVentas" asp-route-inicio="@Model.FechaInicio.ToString("yyyy-MM-dd")" asp-route-fin="@Model.FechaFin.ToString("yyyy-MM-dd")">
                                    <i class="bi bi-file-earmark-excel me-2 text-success"></i> Excel (.xlsx)
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportarPdfVentas" asp-route-inicio="@Model.FechaInicio.ToString("yyyy-MM-dd")" asp-route-fin="@Model.FechaFin.ToString("yyyy-MM-dd")">
                                    <i class="bi bi-file-earmark-pdf me-2 text-danger"></i> PDF (.pdf)
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0)" onclick="window.print()">
                                    <i class="bi bi-printer me-2 text-primary"></i> Imprimir RÃ¡pido
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resumen -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white border-0 shadow-sm rounded-4">
                <div class="card-body py-3">
                    <p class="mb-0 small opacity-75">Total Vendido en el Periodo</p>
                    <h3 class="mb-0">C$ @Model.TotalVendido.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-info text-white border-0 shadow-sm rounded-4">
                <div class="card-body py-3">
                    <p class="mb-0 small opacity-75">Total Facturas Generadas</p>
                    <h3 class="mb-0">@Model.TotalFacturas</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Resultados -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Factura</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th class="text-end">Monto</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Detalles)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.NumeroFactura</td>
                                <td class="small">@item.Fecha.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.Cliente</td>
                                <td class="text-end fw-bold">C$ @item.Total.ToString("N2")</td>
                                <td class="text-center">
                                    @{
                                        var badgeClass = item.Estado switch {
                                            "Completada" => "bg-success-subtle text-success",
                                            "Pendiente" => "bg-warning-subtle text-warning",
                                            "Anulada" => "bg-danger-subtle text-danger",
                                            _ => "bg-secondary-subtle text-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass rounded-pill">@item.Estado</span>
                                </td>
                                <td class="text-center pe-4">
                                    <button class="btn btn-link btn-sm text-primary" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        @if (!Model.Detalles.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-search fs-1 d-block mb-2"></i>
                                    No se encontraron ventas en este rango de fechas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .top-header, .sidebar, .card-header, form, .btn, .breadcrumb {
            display: none !important;
        }
        .main-content {
            margin-left: 0 !important;
            padding: 0 !important;
        }
        .card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }
    }
</style>
