<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ferretería ERP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
<div class="app-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h4 class="logo">Ferretería ERP</h4>
            <p class="subtitle">Sistema de Gestión de Ferreterías</p>
        </div>
        <nav class="sidebar-nav">
            <ul class="menu">
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-grid"></i>
                        <span>Panel Principal</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventario" ? "active" : "")">
                    <a asp-controller="Inventario" asp-action="Index">
                        <i class="bi bi-box-seam"></i>
                        <span>Inventario</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Pos" ? "active" : "")">
                    <a asp-controller="Pos" asp-action="Index">
                        <i class="bi bi-cart3"></i>
                        <span>Ventas</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Compras" ? "active" : "")">
                    <a asp-controller="Compras" asp-action="Index">
                        <i class="bi bi-truck"></i>
                        <span>Compras</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Reportes" ? "active" : "")">
                    <a asp-controller="Reportes" asp-action="Index">
                        <i class="bi bi-bar-chart"></i>
                        <span>Reportes</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuarios" ? "active" : "")">
                    <a asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Usuarios</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Licencia" ? "active" : "")">
                    <a asp-controller="Licencia" asp-action="Index">
                        <i class="bi bi-lock"></i>
                        <span>Licencia</span>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="sidebar-footer">
            v1.0.0 © 2026 Ferretería Pro
        </div>
    </aside>
    <main class="main-content">
        @RenderBody()
    </main>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
