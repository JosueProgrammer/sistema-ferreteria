@model IEnumerable<Sistema_Ferreteria.Models.Seguridad.Tenant>
@{
    ViewData["Title"] = "Gestión de Empresas (Tenants)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Gestión Multitenant</h1>
        <p class="subtitle">Administrar empresas, sucursales y aislamiento de datos</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-building-plus me-1"></i> Nueva Empresa
    </a>
</div>

<div class="card-erp shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-erp align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Empresa</th>
                        <th>ID / Alias</th>
                        <th>ID Fiscal</th>
                        <th>Estado</th>
                        <th>Miembros (Simulado)</th>
                        <th>Creación</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="tenant-icon-box me-3">
                                        @if (!string.IsNullOrEmpty(item.LogoUrl))
                                        {
                                            <img src="@item.LogoUrl" alt="Logo" class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <i class="bi bi-building text-primary"></i>
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-bold">@item.Nombre</div>
                                        <div class="small text-muted">@item.Direccion</div>
                                    </div>
                                </div>
                            </td>
                            <td><code>@item.IdTenant</code></td>
                            <td>@(item.IdentificadorFiscal ?? "N/A")</td>
                            <td>
                                <span class="badge-erp @(item.Activo ? "success" : "danger")">
                                    @(item.Activo ? "Activo" : "Suspendido")
                                </span>
                            </td>
                            <td>
                                <span class="text-muted"><i class="bi bi-people me-1"></i> --</span>
                            </td>
                            <td class="small text-muted">@item.FechaCreacion.ToShortDateString()</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.IdTenant" class="btn btn-outline-info" title="Estadísticas">
                                        <i class="bi bi-graph-up"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.IdTenant" class="btn btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (item.IdTenant != "Default")
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.IdTenant" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .tenant-icon-box {
        width: 40px;
        height: 40px;
        background: #f8f9fa;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        border: 1px solid #e9ecef;
    }
</style>
